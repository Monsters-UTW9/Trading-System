@section Scripts{
<script>
    var echartPie = echarts.init(document.getElementById('echart_pie'), theme);

    echartPie.setOption({
    tooltip: {
    trigger: 'item',
    formatter: "{a} <br />{b} : {c} ({d}%)"
    },
    legend: {
    x: 'center',
    y: 'bottom',
    data: ['@ViewBag.Title', 'E-mail Marketing', 'Union Ad', 'Video Ads', 'Search Engine']
    },
    toolbox: {
    show: true,
    feature: {
    
    restore: {
    show: true,
    title: "Restore"
    },
    saveAsImage: {
    show: true,
    title: "Save Image"
    }
    }
    },
    calculable: true,
    series: [{
    name: 'Stock',
    type: 'pie',
