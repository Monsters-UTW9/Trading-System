<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Trading System">
    <meta name="author" content="">
    <title>@ViewBag.Title</title>
    <!--Logo-->
    <link rel="shortcut icon" href="~/Images/logoIcon.ico">
    @Styles.Render("~/Content/SharedStyles", "~/Content/AdminStyle.css", "~/Content/dataTables.bootstrap.min.css")
</head>
<body class="nav-md">
    @Html.Partial("~/Views/Shared/_LanguageView.cshtml")
    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col menu_fixed">
                <div class="left_col scroll-view">
                    <div class="navbar nav_title">
                        <a href="#" class="site_title">
                            <img src="~/Images/logo.png" alt="Trading System" class="redirection" />  
                            <span>Trading System</span>
                        </a> <!-- Home Here -->
                    </div>
                    <div class="clearfix"></div>
                    <!-- menu profile quick info -->
                    <div class="profile">
                        <div class="profile_pic">

                            <!-- Current avatar -->
                             <img src="~/Images/profile.jpg" class="img-circle profile_img" alt="">
                        </div>
                        <div class="profile_info">
                            <span>Welcome,</span>
                            <h2>Amal Tarek</h2>
                        </div>
                    </div>
                    <!-- /menu profile quick info -->
                    <br />
                                 <!-- sidebar menu -->
                        <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
                            <div class="menu_section">
                                <h3> Admin </h3>
                                <ul class="nav side-menu">

                                    <li>
                                        <a href="#"><i class="fa fa-home"></i> Home </a>
                                    </li>
                                    <li>
                                        <a><i class="fa fa-group"></i> All Users </a>
                                    </li>
                                    <li>
                                        <a href="#"><i class="fa fa-tags"></i> All Orders </a>
                                    </li>
                                </ul>

                            </div>
                        </div>
                    <!-- /sidebar menu -->
                    <!-- /menu footer buttons -->
                        <div class="sidebar-footer hidden-small">
                            <a data-toggle="tooltip" data-placement="top" title="Profile" href="#">
                                <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                            </a>
                            <a data-toggle="tooltip" data-placement="top" title="Orders" href="#">
                                <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>
                            </a>
                            <a data-toggle="tooltip" data-placement="top" title="Home" href="#">
                                <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
                            </a>
                            <a data-toggle="tooltip" data-placement="top" title="Logout" href="#">
                                <span class="glyphicon glyphicon-off" aria-hidden="true"></span>
                            </a>
                        </div>
                    <!-- /menu footer buttons -->
                    
                </div>
            </div>
            <!-- top navigation -->


            <div class="top_nav">
                <div class="nav_menu">
                    <nav>
                        <div class="nav toggle">
                            <a id="menu_toggle"><i class="fa fa-bars"></i></a>
                        </div>
                        <ul class="nav navbar-nav navbar-right">
                            <li class="">
                                <a href="javascript:;" class="user-profile dropdown-toggle" data-toggle="dropdown" aria-expanded="false">

                                    <!-- Current avatar -->
                                   
                                            <img src="~/Images/profile.jpg" alt="">Amal Tarek

                                     
                                    <span class=" fa fa-angle-down"></span>
                                </a>
                                <ul class="dropdown-menu dropdown-usermenu pull-right">
                                  
                                    <li><a href="#"><i class="fa fa-user pull-right"></i> Profile</a></li>
                                
                                    <li><a href="#"><i class="fa fa-sign-out pull-right"></i> Log Out</a></li>
                                </ul>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
            <!-- /top navigation -->
            <!-- page content -->
            <div class="right_col" role="main">
                    @RenderBody()
            </div>
            <!-- /page content -->
            <!-- footer content -->
            <footer>
                <div class="pull-right">
                    <a>  Copyright &copy; Trading System Project 2017</a>
                </div>
                <div class="clearfix"></div>
            </footer>
            <!-- /footer content -->
        </div>
    </div>

    <!-- /footer content -->
    <!--bundle JQuery BootStrap Script Theme-->
    @Scripts.Render("~/Scripts/SharedScripts", "~/Scripts/DataTables")


    @RenderSection("scripts", required: false)

</body>
</html>
